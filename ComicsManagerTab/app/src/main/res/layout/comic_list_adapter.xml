<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/activatedBackgroundIndicator"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/textFecha"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.05"
            android:text="TextView" />

        <TextView
            android:id="@+id/textTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/textNumero"
            android:layout_toRightOf="@+id/textFecha"
            android:text="TextView" />

        <TextView
            android:id="@+id/textNumero"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="TextView"
            android:textColor="@color/text_normal" />

        <TextView
            android:id="@+id/textPrecioL"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textFecha"
            android:text="TextView"
            android:textColor="@color/text_normal" />

        <TextView
            android:id="@+id/textEditorial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textTitulo"
            android:layout_below="@+id/textTitulo"
            android:text="TextView"
            android:textColor="@color/text_normal" />

        <TextView
            android:id="@+id/textPeriodicidadL"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textEditorial"
            android:layout_alignBottom="@+id/textEditorial"
            android:layout_alignParentRight="true"
            android:text="TextView"
            android:textColor="@color/text_normal" />

    </RelativeLayout>

</LinearLayout>